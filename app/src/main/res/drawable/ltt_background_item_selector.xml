<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#80FF8E49" />
            <corners android:radius="10dp" />
        </shape>
        <layer-list>
            <item android:drawable="@drawable/work_background_pressed" />
        </layer-list>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="10dp" />
        </shape>
        <layer-list>
            <item android:drawable="@drawable/work_background_focused" />
        </layer-list>
    </item>

    <item >
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="10dp" />
        </shape>
        <layer-list>
            <item android:drawable="@drawable/work_background" />
        </layer-list>
    </item>



</selector>
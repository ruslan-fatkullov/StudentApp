<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.WithActionBar">
        <item name="actionBarStyle">@style/MainActionBar</item>
        <item name="actionOverflowButtonStyle">@style/actionOverflowButtonStyle</item>
    </style>

    <style name="MainActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/colorActionBar</item>
        <item name="titleTextStyle">@style/MainActionBarTitle</item>
    </style>

    <style name="MainActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">24sp</item>
    </style>
    <!--
Font family: Inter
Line height: 24sp
-->
    <!-- styles.xml -->
    <style name="the_maptrix">

        <item name="android:textSize">
            20sp
        </item>

        <item name="android:textColor">
            #FFFFFF
        </item>

    </style>

    <style name="navTextActive">
        <item name="android:layout_marginTop">8dip</item>
    </style>

    <style name="actionOverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">#000000</item>
    </style>
</resources>
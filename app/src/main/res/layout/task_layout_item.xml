<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainTaskLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="20dp"


    android:background="@drawable/schedule_day_item_selector"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"


    android:orientation="vertical">


    <LinearLayout

        android:id="@+id/titleTaskCl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titleTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingTop="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="@string/taskTitle"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="@id/titleTaskCl"
            app:layout_constraintTop_toTopOf="@id/titleTaskCl"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/titleTaskCl">

        <TextView
            android:id="@+id/descriptionTask"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:padding="10dp"
            android:text="@string/taskDescriptionTitle"
            android:layout_marginStart="15dp"
            android:ellipsize="end"
            android:maxLines="1"
            />

        <TextView
            android:id="@+id/typeTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:padding="2dp"
            android:textAlignment="center"
            android:background="@drawable/schedule_pair_type_background"
            android:text="@string/typeOfWorkTitle"
            android:gravity="center_horizontal"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp" />
    </LinearLayout>


</LinearLayout>
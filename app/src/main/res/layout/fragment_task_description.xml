<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/testBackground"
    tools:context=".fragments.TaskFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/backCL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/ic_backtolist"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="30dp"
            android:contentDescription="Кнопка назад" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/imageView8"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Назад" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/task_background_second"
        android:padding="35dp"
        app:layout_constraintTop_toBottomOf="@id/backCL">

        <ImageView
            android:id="@+id/typeTaskIV"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_flask"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/task_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Лабораторная"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/typeTaskIV"
            app:layout_constraintStart_toEndOf="@+id/typeTaskIV"
            app:layout_constraintTop_toTopOf="@+id/typeTaskIV" />

        <TextView
            android:id="@+id/task_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Название"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/typeTaskIV" />

        <TextView
            android:id="@+id/task_description_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Задание"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/task_name" />

        <TextView
            android:id="@+id/task_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Описание"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/task_description_label" />

        <TextView
            android:id="@+id/mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Оценка"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/mark_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mark_label" />

        <TextView
            android:id="@+id/teacherComment_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="40sp"
            android:gravity="center"
            android:text="Комментарий переподавателя:"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/task_description" />

        <TextView
            android:id="@+id/teacherComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Comment"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/teacherComment_label"
            />

        <TextView
            android:id="@+id/mark_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="Оценка:"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/doneLabel"
            app:layout_constraintEnd_toStartOf="@+id/mark"
            app:layout_constraintTop_toTopOf="@+id/doneLabel" />

        <ImageView
            android:id="@+id/doneTaskIV"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/teacherComment" />

        <TextView
            android:id="@+id/doneLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Сдано"
            app:layout_constraintBottom_toBottomOf="@+id/doneTaskIV"
            app:layout_constraintStart_toEndOf="@+id/doneTaskIV"
            app:layout_constraintTop_toTopOf="@+id/doneTaskIV" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>